# Tesla Road Trip Game Server Environment Variables
# Copy this file to .env and fill in your values

# Ngrok Configuration
# Get your auth token from https://dashboard.ngrok.com/get-started/your-authtoken
# Supports both NGROK_AUTHTOKEN and NGROK_AUTH_TOKEN
NGROK_AUTH_TOKEN=your-ngrok-auth-token-here

# Enable ngrok tunnel (set to true or 1 to enable)
NGROK_ENABLED=false

# Optional: Custom ngrok domain (requires paid ngrok account)
# NGROK_DOMAIN=your-custom-domain.ngrok-free.app

# Server Configuration (optional, can also use command line flags)
# PORT=8080
# HOST=localhost
# DEBUG=false

# Game Configuration (optional)
# CONFIG_DIR=configs
# DEFAULT_CONFIG=classic